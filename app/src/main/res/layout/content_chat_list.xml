<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_list_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorWhite"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/user_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:layout_above="@+id/user_last_message"
        android:layout_toRightOf="@+id/user_list_image"
        android:layout_toEndOf="@+id/user_list_image" />
    <TextView
        android:id="@+id/user_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HomeTown"
        android:layout_alignBottom="@+id/user_list_image"
        android:layout_toRightOf="@+id/user_list_image"
        android:layout_toEndOf="@+id/user_list_image" />
</RelativeLayout>